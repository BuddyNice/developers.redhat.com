{#
/**
 * @file
 * Theme override for a field.
 */
#}

{% set classes = [
  'assembly',
  'pf-l-flex'
] %}
<div{{attributes.addClass(classes)}}>

  {# Embed slideshare or youtube iframe #}
  {% if is_slideshare %}
    <iframe src="{{ embed_url }}" width="854" height="480" frameborder="0" marginwidth="0" marginheight="0" scrolling="no" style="border:1px solid #CCC; border-width:1px; margin-bottom:5px; max-width: 100%;" allowfullscreen></iframe>
  {% elseif is_youtube %}
    <iframe width="854" height="480" src="{{ embed_url }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  {% else %}
    {# show the embedded_content as a hyperlink #}
  	{{- content -}}
  {% endif %}

</div>
