<div class="pf-l-grid pf-m-gutter">
  {% if three_up %}
  {% for item in items %}
  <div class="pf-l-grid__item pf-m-12-col pf-m-4-col-on-md">
    {{ item }}
  </div>
  {% endfor %}
  {% else %}
  {% for item in items %}
  <div class="pf-l-grid__item pf-m-12-col pf-m-4-col-on-md pf-m-3-col-on-lg">
    {{ item }}
  </div>
  {% endfor %}
  {% endif %}
</div>
