{% set classes = [
  'component',
  'rhd-c-dynamic-content-list-compact',
]%}

<div {{ attributes.addClass(classes) }}{{ audience_selection }}>
  <div class="pf-l-grid">
    <div class="pf-l-grid__item pf-m-12-col">
      <h2 class="pf-c-title">{{ assembly.field_title[0].value }}</h2>
    </div>
    <div class="pf-l-grid__item pf-m-12-col">
      {{ content.posts }}
    </div>
  </div>
  {{ content.field_cta_link }}
</div>
